@using LunchOrderingApp.Models.Domain
@model IEnumerable<Menu>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class=" mt-5 ">
    <div class="text-end my-2 me-4">
        <a asp-action="Add" asp-controller="Menu" class="my-2 text-end btn-success btn">Add Menu</a>
    </div>

    <div class="table-responsive">
        <table class="table-striped mx-auto table w-75">
            <thead>
                <tr>
                    <th scope="col" class="text-center">
                        <h6>
                            Menu Name
                        </h6>
                    </th>
                    <th colspan="2" scope="colgroup" class="text-center">
                        <h6>
                            Actions
                        </h6>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in Model)
                {
                    <tr>
                        <td class="text-center">
                            <h5>
                                @menu.MenuName
                            </h5>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Menu" asp-action="Edit" asp-route-id="@menu.MenuId" class="ml-3 my-auto btn-info btn">Edit</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-controller="Menu" asp-route-id="@menu.MenuId" type="submit" class="my-auto btn-danger btn">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
