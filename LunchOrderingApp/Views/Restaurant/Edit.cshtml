@{
}


<section class="p-5 mt-4">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add new restaurant</p>
                                <form asp-action="Edit" method="post" class="mx-1 mx-md-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input aria-required="true" asp-for="RestaurantName" type="text" class="form-control" />
                                            <label asp-for="RestaurantName" class="form-label">Restaurant Name</label>
                                            <span asp-validation-for="RestaurantName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input aria-required="true" asp-for="RestaurantAddress" type="text" class="form-control" />
                                            <label asp-for="RestaurantAddress" class="form-label">Restaurant Address</label>
                                            <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input aria-required="true" asp-for="RestaurantCode" type="text" class="form-control" />
                                            <label asp-for="RestaurantCode" class="form-label">Restaurant Code</label>
                                            <span asp-validation-for="RestaurantCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="MenuId">Menu</label>
                                            <select asp-for="MenuId" class="form-select">
                                                @foreach (var menu in ViewBag.Menus)
                                                {
                                                    <option value="@menu.MenuId">@menu.MenuName</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-flex w-100 justify-content-center">
                                        <button type="submit" class="btn btn-primary mx-3 btn">Save</button>
                                        <a asp-controller="Restaurant" asp-action="Index" class="btn mx-3 btn-warning">Cancel</a>
                                    </div>
                                </form>                                 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>