@using LunchOrderingApp.Models.Domain
@model IEnumerable<Restaurant>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class=" mt-5">
    <div class="text-end my-2 me-4">
        <a asp-action="Add" asp-controller="Restaurant" class="my-2 text-end btn-success btn">Add Restaurant</a>
    </div>

    <div class="table-responsive">
        <table class="table-striped mx-auto table w-75">
            <thead>
                <tr>
                    <th scope="col" class="text-center">
                        <h6>
                            Restaurant Name
                        </h6>
                    </th>
                    <th scope="col" class="text-center">
                        <h6>
                            Restaurant Address
                        </h6>
                    </th>
                    @if (User.IsInRole("admin"))
                    {
                        <th colspan="3" scope="colgroup" class="text-center">
                            <h6>
                                Action
                            </h6>
                        </th>
                    }
                    @if (User.IsInRole("customer"))
                    {
                        <th colspan="1" scope="colgroup" class="text-center">
                            <h6>
                                Action
                            </h6>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                    <tr>
                        <td class="text-center">
                            <h5>
                                @restaurant.RestaurantName
                            </h5>
                        </td>
                        <td class="text-center">
                            <h5>
                                @restaurant.RestaurantAddress
                            </h5>
                        </td>
                        <td>
                            <a asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurant.MenuId" class="my-auto btn-primary btn">View</a>
                        </td>
                        @if (User.IsInRole("admin"))
                        {
                            <td>
                                <a asp-controller="Restaurant" asp-action="Edit" asp-route-id="@restaurant.RestaurantId" class=" my-auto btn-info btn">Edit</a>

                            </td>
                            <td>
                                <a asp-action="Delete" asp-controller="Restaurant" asp-route-id="@restaurant.RestaurantId" type="submit" class="my-auto btn-danger btn">Delete</a>

                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
